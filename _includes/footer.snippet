<div style="display:none;">
    <script type="text/javascript">
        $(function(){
            //博客简介
            if(window.console&&window.console.log) {
                console.log("%c欢迎踩点我的博客：http://barretlee.github.io，\n我觉得编程是一件非常愉快的事情。对一个疯狂的程序员\n来说，代码就是他的一切，我还没有那么疯狂，但是也希\n望coding 的时候可以融入自己的生活哲学，让更多娱乐\n化的元素出现在代码中~\n\n", "color:#666;");

                console.log("%c\nWeibo: http://weibo.com/hustskyking (@靖鸣君)\nFacebook: @barret.china\ntwitter: @barret_china\nGmail:barret.china@gmail.com\n", "color:#F00;height:200px;width:400px;");
            }

            //follow me
            $('.home-follow').click(function(e){
                e.preventDefault();

                if($('.home-contact').is(':visible')){
                    $('.home-contact').slideUp(100);
                }else{
                    $('.home-contact').slideDown(100);
                }
            });

            //站内搜索
            var $s = $(".web-search");
            $s.on("focus", function(){
                setTimeout(function(){
                    $s.select();
                });
            }).on("keydown", function(evt){
                if(evt.which == "13") {
                    if(window.location.pathname.indexOf("search") > -1){
                        window.location.href = "/search?q=" + $s.val();
                        return;
                    }
                    window.open("/search?q=" + $s.val());
                }
            });
        });

        ~function(){
